@model IEnumerable<MVCModel.Models.OrderViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Statistics Data</h2>

<div class="d-flex flex-column">
    <div class="d-flex gap-1 ">
        <a>@Html.ActionLink("10 Best Seller Books", "GetTenBestSellerBook")</a>
        <a>@Html.ActionLink("10 Best Seller Categories", "GetFiveBestSellerCategories")</a>
        <a>@Html.ActionLink("Total Book And Category Sell", "GetTotalBookAndCategorySell")</a>
        <a>@Html.ActionLink("Unpopular Books", "GetUnpopularBooks")</a>
        <a>@Html.ActionLink("Best Seller Book", "GetBestSellerBook")</a>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
